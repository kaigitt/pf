<div class="container">
  <div class="row mt-3">

    <div class="col-4 my-page-left border mr-2 bg-white">
      <div class="user-info mt-4">
        <div class="col-4-offset d-flex justify-content-center"><%= attachment_image_tag @user, :profile_image, size: "72x72" %></div>
        <div class="col-4-offset d-flex justify-content-center mt-2"><%= @user.name %></div>
        <div class="col-10-offset d-flex justify-content-center"><%= @user.introduction %></div>
      </div>
      <div class="user-info-follows">
        <div class="row user-info-detail">
          <div class="col-4 d-flex justify-content-center user-info-count"><%= @user.play_lists.count%></div>
          <div class="col-4 d-flex justify-content-center user-info-count"><%= @user.favorites.count%></div>
          <div class="col-4 d-flex justify-content-center user-info-count"><%= @user.follower_user.count%></div>
        </div>
        <div class="row user-info-detail">
          <div class="col-4 d-flex justify-content-center text-secondary">投稿</div>
          <div class="col-4 d-flex justify-content-center text-secondary">ブックマーク</div>
         <div class="col-4 d-flex justify-content-center text-secondary">フォロワー</div>
        </div>
      </div>
      <div class="user-info-edit d-flex justify-content-center">
        <% if current_user.id == @user.id %>
          <%= link_to "プロフィールを編集する", edit_user_path, class: "btn btn-outline-dark mt-3" %>
        <% else %>
          <% if current_user.following?(@user)%>
            <%= link_to "フォロー外す", user_unfollow_path(@user), class: "btn btn-outline-dark" , method: :delete %>
          <% else %>
            <%= link_to "フォローする", user_follow_path(@user), class: "btn btn-outline-dark" , method: :post %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-7 my-page-right  bg-white">
      <div class="my-page-right-top m-3">
      </div>
      <div class="my-page-right-bottom">
        <div class="tab-area">
          <div class="tab active">プレイリスト</div>
          <div class="tab">ブックマーク</div>
        </div>
        <div class="content-area">
          <div class="content show">
            <% @user.play_lists.each do |play_list| %>
              <div class="row">
                <div class="col-2 user-play-list"><%= link_to play_list_path(play_list) do %><%= attachment_image_tag play_list, :play_list_image, size: "100x100" %><% end %></div>
                <div class="col-18 user-play-list">
                  <div class="tag"><% play_list.tags.each do |tag| %><p><%= tag.name %></p><% end %></div>
                  <div class="title"><%= play_list.title %></div>
                  <div class="bookmark"><%= play_list.favorites.count %></div>
                  <div class="body"><%= play_list.body %></div>
                  <div class="created_at"><%= play_list.created_at.strftime("%Y-%m-%d") %></div>
                </div>
                <div class="col-2"><%= link_to "削除", play_list_path(play_list), method: :delete %></div>
              </div>
            <% end %>
      　　</div>
      　　<div class="content">
            <% @user.favorite_play_lists.each do |play_list| %>
              <div class="row">
            <div class="col-4"><%= link_to play_list_path(play_list) do %><%= attachment_image_tag play_list, :play_list_image, size: "50x50" %><% end %></div>
            <div class="col-4"><%= play_list.title %></div>
            <div class="col-4"><%= play_list.body %></div>
          </div>
            <% end %>
      　  </div>
    　　</div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-12-offset"><h1>ユーザ編集画面</h1></div>
    <div class="">
      <%= form_with model: @user, local: true do |f|%>
       <div class="form-group">
         name
         <%= f.text_field :name, class: "form-control", value: @user.name %>
       </div>
       <div class="form-group">
         introduction
         <%= f.text_field :introduction, class: "form-control", value: @user.introduction %>
       </div>
       <div class="form-group">
         ユーザ画像
         <%= f.attachment_field :profile_image, class: "form-control", value: @user.profile_image %>
       </div>
      <%= f.submit "編集内容を保存",class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row mt-5">
    <div class="col-md-4 mypage-left d-flex justify-content-center">
      <%= render 'mypages/edit_left' %>
    </div>
    <div class="col-md-7 mypage-right bg-white rounded p-3">
        <div class="edit-title"><span class="d-flex justify-content-center font-weight-bold">プロフィール編集</span></div>
        <div class="p-3">
          <%= form_with model: @user, local: true do |f|%>
            <div><%= attachment_image_tag @user, :profile_image, size: "80x80", fallback: "no-user-image.png" %></div>
            <div class="form-group mt-2">
            名前
            <%= f.text_field :name, class: "form-control mt-1", value: @user.name %>
            </div>
            <div class="form-group mt-2">
            年齢
            <%= f.text_field :age, class: "form-control mt-1", value: @user.age %>
            </div>
            <div class="form-group">
            ユーザ画像
            <%= f.attachment_field :profile_image, class: "form-control mt-1", value: @user.profile_image %>
            </div>
            <div class="form-group">
            introduction
            <%= f.text_field :introduction, class: "form-control mt-1", value: @user.introduction, size: "100x200" %>
            </div>
            <%= f.submit "変更内容を保存する",class: 'btn btn-success' %>
          <% end %>
       </div>
    </div>
  </div>
</div>

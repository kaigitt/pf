<div class="container bg-white">
    <div class="row"><h1>ユーザ一覧</h1></div>
  <div class="row border-bottom">
    <% @users.each do |user| %>
        <div class="col-4"><%= link_to admin_user_path(user) do %><%= attachment_image_tag user, :profile_image, size: "50x50" %><% end %></div>
        <div class="col-4"><%= user.name %></div>
        <div class="col-4">
          <% if user.is_deleted == false %>
            <%= link_to "アカウント停止", admin_users_hide_path(user),method: :put, class: "btn btn-danger", "data-confirm" => "本当に停止しますか？" %>
          <% else %>
            <%= link_to "停止解除", admin_users_open_path(user),method: :put, class: "btn btn-success" %>
          <% end %>
        </div>
    <% end %>
  </div>
</div>
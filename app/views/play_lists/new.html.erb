<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class=" text-algin-center">プレイリスト新規登録画面</h1>
    </div>
    <div class="col-12">
      <%= form_with model: @play_list, url: play_lists_path,method: :post, local: true do |f|%>
         <div class="field">
            <%= f.label :title %>
            <%= f.text_field :title %>
         </div>
         <div class="field">
            <%= f.label "イメージ画像" %>
            <%= f.attachment_field :play_list_image %>
         </div>
         <div class="field">
            <%= f.label :body %>
            <%= f.text_field :body %>
         </div>
         <div class="field">
            <%= f.label :tag_name %>
            <%= f.text_field :tag_name %>
         </div>

         <% @play_list.songs.each do |song|%>
           <%= f.fields_for :songs, song do |song_field| %>
           <div class="row">
           <div class="col-6">
             <%= f.label '曲名' %>
             <%= song_field.text_field :name %>
           </div>
           <div class="col-6">
             <%= f.label '説明文' %>
             <%= song_field.text_field :description %>
            </div>
             </div>
            <% end %>
        <% end %>
      <%= f.submit '曲を追加する' %>
      <% end %>
    </div>
  </div>
</div>


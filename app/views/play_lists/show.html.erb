<div class="container bg-white">
    <div class="col-12"><h1>プレイリスト詳細画面</h1></div>
    <div class="row">
      <div class="col-8"><h3><%= @play_list.title %></h3></div>
      <div class="col-4"><%= attachment_image_tag @play_list, :play_list_image, size: "50x50" %></div>
    </div>
    <div class="row">
      <div class="col-8"><h3><%= @play_list.body %></h3></div>
      <div class="col-4"></div>
    </div>
    <div class="row">
      <div class="col-8"><% @play_list_tags.each do |tag| %><span><%= tag.name %>(<%= tag.tag_maps.count%>)</span><% end %></div>
      <div class="col-4"></div>
    </div>
    <div class="row">
      <div class="col-8">
        <ul>
        <% @play_list.songs.each do |song| %>
          <li><%= song.name %><%= song.description %></li>
          <% end %>
        </ul>
      </div>
      <div class="col-4"></div>
    </div>

    <div class="favorites">
      <% if @play_list.favorited_by?(current_user) %>
    <p>
      <%= link_to play_list_favorite_path(@play_list), method: :delete do %>
        ♥<%= @play_list.favorites.count %> いいね
      <% end %>
    </p>
    <% else %>
    <p>
      <%= link_to play_list_favorites_path(@play_list), method: :post do %>
        ♡<%= @play_list.favorites.count %> いいね
      <% end %>
    </p>
  <% end %>
    </div>

    <% @comments.each do |comment|%>
      <div class="col-12 mt-5">
        <div class="row">
          <div class="col-4"><%= attachment_image_tag comment.user, :profile_image, size: "50x50" %></div>
          <div class="col-8"><%= comment.content %></div>
        </div>
      </div>
    <% end %>

    <div class="col-12">
    <table>
      <tbody>
        コメント欄
        <tr>
          <%= form_with model:[@play_list, @comment], local: true do |f| %>
          <td><%= f.text_area :content, size: "50x5" %><%= f.submit "コメント" %></td>
          <% end %>
        </tr>
      </tbody>
    </table>
</div>

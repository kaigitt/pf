<%= flash[:error] %>
<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-8 bg-white p-5 rounded">
    <div class="contact-head border-bottom my-3 pb-3"><h1 class="d-flex justify-content-center">ログイン</h1></div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field form-group">
      <%= f.label "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= f.label "パスワード" %>
      <% if @minimum_password_length %>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="actions d-flex justify-content-center mt-5">
      <%= f.submit "ログイン",class: "btn submit-bottom" %>
    </div>
  <% end %>
    </div>
  </div>
</div>
